ul.codoshop-text-editor-tabs(ng-attr-hsort='', ng-attr-top-tabs='')
	li(ng-repeat='file in openFiles', ng-class='{ tab: true, selected: file.selected }')
		a(href='javascript:void(0)', ng-click='select($index)')
			span {{file.name}}
		| 			
		a(href='javascript:void(0)', ng-click='close($index)')
			div
	| 	
	li
		a(href='javascript:void(0)', ng-click='newFile()', ng-attr-tooltip='', title='new file')
			span +
	| 	
	li
.codoshop-text-editor-content
	ui-codemirror(ng-repeat='file in openFiles', ng-show='file.selected == true', ui-codemirror-opts='editorOptions', ng-attr-codoshop-text-editor='')
